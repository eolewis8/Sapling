<?xml version="1.0" encoding="utf-8"?>
<!-- styles.xml -->
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#C9D53A</item>
        <item name="colorPrimaryDark">#96A500</item>
        <item name="colorAccent">#B3E5FC</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textColorPrimary">#96A500</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>
</resources>